@model IEnumerable<MVCAssignment.Models.Course>

@{
    ViewBag.Title = "Courses";
}

<h2></h2>

<p>
    <button  class="btn btn-sm btn-warning"> @Html.ActionLink("Create New", "Create")</button>
</p>
<br />
<table class="table table-bordered table-hover" >
    <tr style="background-color:darkred">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stream)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stream)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @item.StartDate.ToShortDateString()
        </td>
        <td>
            @item.EndDate.ToShortDateString()
        </td>
        <td>
            <button class="btn  btn-primary btn-sm">   @Html.ActionLink("Edit", "Edit", new { id = item.Id }) </button> |
            <button class="btn btn-success btn-sm">    @Html.ActionLink("Details", "Details", new { id = item.Id }) </button> |
            <button class="btn btn-danger btn-sm">     @Html.ActionLink("Delete", "Delete", new { id = item.Id }) </button>
        </td>
    </tr>
}

</table>
